pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: "${env.BRANCH_NAME}", credentialsId: 'your_credentials_id', url: 'https://your_repo_url.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            when {
                branch 'master'
            }
            steps {
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
